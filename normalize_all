#!/usr/bin/env bash

find . -maxdepth 1 \( -name "*.ogg" -o -name "*.mkv" -o -name "*.mp4" -o -name "*.m4a" -o -name "*.opus" \) | while read fname; do
    echo "$fname"
    rm -f "$fname".log
    echo "removed old log"
    cpus=$(grep -c ^processor /proc/cpuinfo)
    cores=$([ $cpus -le "12" ] && echo "$cpus" || echo "12")
    echo "cores: ${cores}"
    parallel --semaphore --lb -j "${cores}" "nice -n 20 normalize \"${fname}\" >> \"${fname}.log\" 2>&1 && mkdir normalized_done -p && mv -n \"${fname}\" normalized_done && rm -f \"${fname}.log\""
    rm -f "$fname".log
done
parallel --semaphore --wait
wait
